<Window x:Class="semana2.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:semana2"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_Operaciones" Background="Cyan">
                    <MenuItem Header="_Ingresos"/>
                    <MenuItem Header="_Salidas" Click="Salidas_Click"/>
                </MenuItem>
                <MenuItem Header="_Mantenimiento" Background="Cyan">
                    <MenuItem Header="_Conductores" Click="Conductores_Click"/>
                    <MenuItem Header="_Transportistas"/>
                    <MenuItem Header="_Camiones" Click="Camiones_Click"/>
                    <MenuItem Header="_Productos"/>
                </MenuItem>
                <MenuItem Header="_Reportes" 
                          Background="Cyan"
                          >
                    <MenuItem Header="_Cargas"/>
                    <MenuItem Header="_Ingresos"/>
                    <MenuItem Header="_Salidas"/>

                </MenuItem>
            </Menu>
        </DockPanel>
    </Grid>
</Window>
